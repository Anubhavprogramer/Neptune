{
  "name": "neptune-todo",
  "version": "1.0.0",
  "description": "Visual notebook-style editor for .todo files",
  "main": "src/index.js",
  "bin": {
    "neptune": "./bin/neptune.js"
  },
  "scripts": {
    "start": "electron src/index.js",
    "dev": "electron src/index.js test.todo",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "webpack --config webpack.renderer.js",
    "build:main": "webpack --config webpack.main.js"
  },
  "keywords": ["todo", "notebook", "editor", "productivity"],
  "author": "Neptune Team",
  "license": "MIT",
  "dependencies": {
    "electron": "^28.0.0",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "html-webpack-plugin": "^5.5.4",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}